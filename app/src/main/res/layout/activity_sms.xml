<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".Contacts.SMSActivity">

<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:id="@+id/toolbar"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:layout_alignParentTop="true"
                                   android:minHeight="?android:attr/actionBarSize" />

<include layout="@layout/activity_sms_content"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_below="@+id/toolbar"/>

    <RelativeLayout
        android:id="@+id/SMSInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">

        <View
            android:id="@+id/SMSInputDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#7faaaaaa"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/SMSInputDivider"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/SMSEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:inputType="textMultiLine"/>

            <ImageButton
                android:id="@+id/SMSSend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="80"
                android:background="#ffffff"
                android:src="@drawable/ic_send"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
